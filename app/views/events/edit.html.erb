<% title "#{@event.name} Settings" %>
<% page_md %>
<%= render "events/nav", selected: :settings %>

<% unless params[:frame] %>
  <span class="eyebrow -mb-4 mt-5 block">Settings</span>
  <h1><%= @settings_tab&.gsub("details", "Organization")&.humanize %></h1>
<% end %>

<% if @settings_tab == "donations" && @event.approved? && @event.plan.donations_enabled? %>
  <%= render "events/settings/donations", event: @event, frame: @frame %>
<% elsif @settings_tab == "reimbursements" && @event.approved? && @event.plan.reimbursements_enabled? %>
  <%= render "events/settings/reimbursements", event: @event, frame: @frame %>
<% elsif @settings_tab == "card_grants" && @event.approved? && @event.plan.card_grants_enabled? %>
  <%= render "events/settings/card_grants", event: @event %>
<% elsif @settings_tab == "tags" %>
  <%= render "events/settings/tags", event: @event %>
<% elsif @settings_tab == "affiliations" %>
  <%= render "events/settings/affiliations", event: @event %>
<% elsif @settings_tab == "features" %>
  <%= render "events/settings/features", event: @event %>
<% elsif @settings_tab == "integrations" %>
  <%= render "events/settings/integrations", event: @event %>
<% elsif @settings_tab == "audit_log" %>
  <%= render "events/settings/audit_log", event: @event, activities: @activities, activities_before: @activities_before %>
<% elsif @settings_tab == "admin" && auditor_signed_in? %>
  <%= render "events/settings/admin", event: @event %>
<% else %>
  <%= render "events/settings/account_info", event: @event %>
  <%= render "events/settings/details", event: @event %>
<% end %>
