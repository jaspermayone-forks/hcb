<%= turbo_frame_tag "merchants" do %>
  <% if !@merchants.empty? %>
    <div id="merchants-chart">
      <h3 class="mt-0 px-0 sm:mt-2 mb-2">Top merchants</h3>
      <div style="width: calc(100% + 20px)">
        <%= react_component "home/Merchants", { data: @merchants }, { camelize_props: false } %>
      </div>
    </div>
   <% else %>
    <div class="flex flex-1 items-center justify-center flex-col text-center">
      <h3 class="text-2xl font-bold mb-0">
        It's quiet here...
      </h3>
      <p class="text-gray-500 my-1 mb-8">
        Merchants will appear here<br>as
        <%= organizer_signed_in? ? "you" : "they" %>
        spend more money
      </p>
    </div>
  <% end %>
<% end %>
