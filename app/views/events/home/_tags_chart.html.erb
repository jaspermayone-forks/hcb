<%= turbo_frame_tag "tags" do %>
  <div id="tags-chart" style="height: 100%">
    <% if tags.empty? %>
      <div class="flex flex-1 flex-col items-center justify-center" style="height: 100%">
        <div class="text-center">
          <h3 class="text-2xl font-bold mb-0">
            It's quiet here...
          </h3>
          <p class="text-gray-500 my-1 max-w-sm">
            <%= organizer_signed_in? ? "You" : "They" %>
            haven't tagged any transactions yet.
          </p>
        </div>
      </div>
    <% else %>
      <h3 class="mt-0 px-0 sm:mt-2 mb-2">Top tags</h3>
      <%= react_component "home/Tags", { data: tags }, { camelize_props: false } %>
    <% end %>
  </div>
<% end %>
