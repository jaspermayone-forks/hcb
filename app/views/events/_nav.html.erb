<%= render "events/mobile_nav", selected: local_assigns[:selected] %>
<% content_for(:header) do %>
  <div class="flex gap-3 items-center lg:pt-4 flex-1">
    <%= render partial: "logo" %>
    <span class="-mx-1.5 text-xl opacity-40">/</span>
    <%= render "events/title" %>
  </div>
<% end %>

<% content_for(:nav) do %>
  <% if !@event&.demo_mode? %>
    <%= render partial: "hcb_codes/create_tag", locals: { button: false } %>
  <% end %>

  <nav class="dock hidden sm:flex mt-4 font-medium">
    <% events_nav(@event, selected: local_assigns[:selected]).each do |item| %>
      <% if item[:section] %>
        <span class="mx-1 dock__section"><%= item[:section] %></span>
        <hr class="opacity-80 border-none h-[1px] bg-gray-200">
      <% else %>
        <%= dock_item item[:name],
            item[:path],
            admin: item[:adminTool],
            tooltip: item[:tooltip],
            icon: item[:icon],
            async_badge: item[:async_badge],
            selected: item[:selected] %>
      <% end %>
    <% end %>
    <%= render partial: "events/settings_dropdown" %>
  </nav>
<% end %>
<% content_for(:container) do %>
<% end %>
