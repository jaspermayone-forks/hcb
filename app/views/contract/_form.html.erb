<%= form_with(model: contract, scope: :contract, local: true, data: { turbo: false }, url: contracts_path(@contract)) do |form| %>
  <%= form.hidden_field :type, value: "Contract::FiscalSponsorship" %>
  <%= form.hidden_field :contractable_id %>
  <%= form.hidden_field :contractable_type %>

  <p class="muted">
    This will send <%= contract.user.name %> a fiscal sponsorship agreement
    for <%= contract.event.name %>. <strong>If they are under 18, <%= contract.user.name %> will need to have a parent sign on their behalf.</strong>
  <p>

  <div class="field field--checkbox">
    <%= form.check_box :include_videos %>
    <%= form.label :include_videos, "Would you like us to include the onboarding videos?" %>
  </div>

  <div class="field">
    <%= form.label :cosigner_email, "Cosigned by (email address)" %>
    <%= form.text_field :cosigner_email %>
  </div>

  <div class="actions">
    <%= form.submit "Send contract" %>
  </div>
<% end %>
