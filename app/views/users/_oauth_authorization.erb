<div class="card border b--info">
  <span class="flex items-center justify-between flex-wrap">
    <span class="bold flex items-center">
      <span><%= authorization.application.name %></span> <span class="badge bg-info ml1">App</span>
    </span>
    <%= link_to revoke_oauth_application_users_path(authorization.application.id), method: :delete, class: "muted tooltipped tooltipped--w z5", 'aria-label': "Sign out of this app", disabled: do %>
      <%= inline_icon "door-leave", size: home_action_size %>
    <% end %>
  </span>
  <% admin_tool do %>
    <p class="mt-2 mb-1 bold">Individual authorizations (<%= authorization.authorization_count %>):</p>
    <table class="table table--small text-sm">
      <thead>
        <tr>
          <th>ID</th>
          <th>Token</th>
          <th>Authorized At</th>
          <th>Scopes</th>
          <th>Expires</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% authorization.tokens.each do |token| %>
          <tr>
            <td><%= token.id %></td>
            <td><code><%= token.abbreviated %></code></td>
            <td><%= local_time_ago token.created_at %></td>
            <td><%= token.scopes %></td>
            <td>
              <% if token.expires_in %>
                <%= time_ago_in_words(token.created_at + token.expires_in.seconds) %> from now
              <% else %>
                Never
              <% end %>
            </td>
            <td>
              <% if token.expires_in %>
                <%= link_to make_authorization_eternal_users_path(id: token.id), method: :post,
                            class: "btn bg-success py1 px2 h4",
                            disabled: !policy(token).make_eternal? do %>
                  <%= inline_icon "clock", size: home_action_size %>
                  Make eternal
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
  <% latest_token = authorization.tokens.max_by(&:created_at) %>
  <% if latest_token.present? %>
    <% if latest_token.latitude.present? && latest_token.longitude.present? %>
      <img class="w-full rounded mt-3 aspect-square" src="https://maps.hackclub.com/api/shipping?latitude=<%= latest_token.latitude %>&longitude=<%= latest_token.longitude %>">
    <% else %>
      <div class="w-full rounded mt-3 aspect-square bg-smoke dark:bg-black opacity-50 flex items-center justify-center text-xl">
        Location unavailable
      </div>
    <% end %>
    <% if latest_token.ip_address.present? %>
      <div class="flex items-center mt-2">
        <%= inline_icon "web", size: 20 %>&nbsp;<code class="mr1 tooltipped tooltipped--n" aria-label="<%= latest_token.ip_address %>"><%= latest_token.ip_address %></code>
      </div>
    <% end %>
    <p class="regular italic muted text-sm m-0 mt-1">
      <%= authorization.authorization_count == 1 ? "Authorized" : "Last authorized" %> <%= local_time_ago latest_token.created_at %>
    </p>
  <% end %>
</div>
