<% is_pinned = hcb_code.pin.present? %>
<% pinnable = hcb_code.pinnable? %>
<% flagable = (hcb_code.stripe_card? || hcb_code.stripe_force_capture?) && hcb_code.stripe_card.present? && !hcb_code.personal_transaction.present? %>
<% open_invoice = hcb_code.invoice? && hcb_code.invoice.open_v2? %>
<% disputable = can_dispute?(hcb_code:) %>
<% reversible_disbursement = hcb_code.incoming_disbursement? && hcb_code.incoming_disbursement.present? && policy(hcb_code.incoming_disbursement.destination_event).create_transfer? %>

<% merchant_not_allowed = hcb_code.stripe_card? && hcb_code.pt.hcb_decline_reason == :merchant_not_allowed && hcb_code.stripe_card&.card_grant.present? %>
<% allowable_on_card = merchant_not_allowed && CardGrantPolicy.new(current_user, hcb_code.stripe_card.card_grant).permit_merchant? && !hcb_code.stripe_card.card_grant.merchant_lock.include?(hcb_code.stripe_merchant["network_id"]) %>
<% allowable_on_event = merchant_not_allowed && EventPolicy.new(current_user, hcb_code.stripe_card.card_grant.event).permit_merchant? && !hcb_code.stripe_card.card_grant.event.card_grant_setting.merchant_lock.include?(hcb_code.stripe_merchant["network_id"]) %>

<% if (disputable || flagable || pinnable || open_invoice || reversible_disbursement || allowable_on_card || allowable_on_event) && organizer_signed_in?(as: :member) %>
  <div data-controller="menu" data-menu-placement-value="bottom-end">
    <%= pop_icon_to "more",
        "#",
        class: "align-middle", "aria-label": "More Options",
        data: { turbo: true, "menu-target": "toggle", action: "menu#toggle click@document->menu#close keydown@document->menu#keydown" } %>
    <div class="menu__content menu__content--2 h5 menu__content--compact" data-menu-target="content">
      <% if pinnable %>
        <%= link_to pin_hcb_code_path(hcb_code, event: @event), method: :post, class: "flex items-center", data: { confirm: "This will #{is_pinned ? "unpin" : "pin" } this transaction for all team members. Continue?" } do %>
          <%= inline_icon "pin-fill", size: 24 %>
          <%= is_pinned ? "Unpin from transaction list" : "Pin to top of transaction list" %>
        <% end %>
      <% end %>
      <% if reversible_disbursement %>
        <%= link_to new_disbursement_path(
              source_event_id: hcb_code.incoming_disbursement.destination_event.id,
              event_id: hcb_code.incoming_disbursement.source_event.id,
              amount: (hcb_code.incoming_disbursement.amount.to_f / 100),
              message: "Reversing: #{hcb_code.incoming_disbursement.name}"
            ), class: "flex items-center" do %>
          <%= inline_icon "reply", size: 24 %>
          Reverse HCB transfer
        <% end %>
      <% end %>
      <% if flagable %>
        <%= link_to invoice_as_personal_transaction_hcb_code_path(id: hcb_code.hashid), method: :post, class: "flex items-center", data: { confirm: "Are you sure you'd like to invoice #{hcb_code.stripe_cardholder&.user&.name || "yourself"} for this transaction? They'll be emailed an invoice." } do %>
          <%= inline_icon "sad", size: 24 %>
          Flag as personal transaction
        <% end %>
      <% end %>
      <% if open_invoice %>
        <%= link_to "#", data: { behavior: "modal_trigger", modal: "manually_mark_as_paid" }, class: "flex items-center" do %>
          <%= inline_icon "checkmark", size: 24 %>
          Manually mark as paid
        <% end %>
      <% end %>
      <% if hcb_code.donation? %>
        <%= link_to "#", data: { behavior: "modal_trigger", modal: "update" }, class: "flex items-center" do %>
          <%= inline_icon "person", size: 24 %>
          Edit donor
        <% end %>
      <% end %>
      <% if disputable %>
        <%= link_to dispute_hcb_code_path(hcb_code), target: "_blank" do %>
          <%= inline_icon "flag-fill", size: 24 %>
          Dispute this transaction
        <% end %>
      <% end %>
      <% if allowable_on_card %>
        <%= link_to permit_merchant_event_card_grant_path(id: hcb_code.stripe_card.card_grant.hashid, event_id: hcb_code.stripe_card.card_grant.event.slug, merchant: hcb_code.stripe_merchant["network_id"]), method: :post, class: "flex items-center", data: { confirm: "Are you sure you'd like to allow this merchant? This will permit future purchases from #{humanized_merchant_name hcb_code.stripe_merchant} on this grant card." } do %>
          <%= inline_icon "checkmark", size: 24 %>
          Allow merchant on this card
        <% end %>
      <% end %>
      <% if allowable_on_event %>
        <%= link_to permit_merchant_event_path(hcb_code.stripe_card.card_grant.event.slug, merchant: hcb_code.stripe_merchant["network_id"]), method: :post, class: "flex items-center", data: { confirm: "Are you sure you'd like to allow this merchant? This will permit future purchases from #{humanized_merchant_name hcb_code.stripe_merchant} across all grant cards for #{hcb_code.stripe_card.card_grant.event.name}." } do %>
          <%= inline_icon "event-check", size: 24 %>
          Allow merchant across <%= hcb_code.stripe_card.card_grant.event.name %>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>

<% if open_invoice %>
  <section data-behavior="modal" role="dialog" id="manually_mark_as_paid" class="modal modal--scroll bg-snow">
    <%= modal_header "Mark as paid" %>
    <p>
      This will void the invoice; only use this tool if the sponsor has paid this invoice through alternative means.
      <span class="bold">Please provide context about how this invoice was paid below:</span>
    </p>
    <%= form_with url: invoice_manually_mark_as_paid_path(hcb_code.invoice), method: :post do |form| %>
      <%= form.text_area :manually_marked_as_paid_reason, class: "card mb2 overflow-visible", placeholder: "This was paid byâ€¦", "data-behavior": "ctrl_enter_submit", style: "min-height: 100px", required: true %>
      <%= form.submit "Mark as paid" %>
    <% end %>
  </section>
<% end %>
